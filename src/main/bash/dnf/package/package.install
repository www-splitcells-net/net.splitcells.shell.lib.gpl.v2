if [ -x "$(command -v dnf)" ]; then
	output=$(sudo dnf install -y $1 > /dev/null)
	if [ "$?" -eq "0" ]; then
		exit 0
	else
		echo.error $output
		exit 1
	fi
else
	echo DNF is not installed.
	exit 1
fi
